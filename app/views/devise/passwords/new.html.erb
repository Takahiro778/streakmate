<div class="max-w-sm mx-auto p-4">
  <div class="card space-y-4">
    <h1 class="text-xl font-bold text-center">Forgot your password?</h1>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name),
                 html: { method: :post, class: "space-y-4" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :email, "Email", class: "text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input mt-1" %>
      </div>

      <div>
        <%= f.submit "Send reset instructions", class: "btn-primary w-full min-h-[44px]" %>
      </div>
    <% end %>
  </div>

  <div class="mt-4 text-center text-sm">
    <%= link_to "Back to Log in", new_session_path(resource_name), class: "underline" %>
  </div>
</div>
