<h2 class="text-2xl font-bold mb-6 text-center">Sign up</h2>

<%= form_for(resource,
             as: resource_name,
             url: registration_path(resource_name),
             html: { class: "space-y-4 max-w-md mx-auto" }) do |f| %>

  <%= render "devise/shared/error_messages", resource: resource %>

  <!-- Nickname -->
  <div>
    <%= f.label :nickname, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", class: "input mt-1" %>
  </div>

  <!-- Email -->
  <div>
    <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
    <%= f.email_field :email, autocomplete: "email", class: "input mt-1" %>
  </div>

  <!-- Password -->
  <div>
    <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
    <% if @minimum_password_length %>
      <em class="text-xs text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "input mt-1" %>
  </div>

  <!-- Password confirmation -->
  <div>
    <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input mt-1" %>
  </div>

  <!-- Submit -->
  <div>
    <%= f.submit "Sign up", class: "btn-primary w-full min-h-[44px]" %>
  </div>
<% end %>

<div class="mt-6 text-center">
  <%= render "devise/shared/links" %>
</div>
