<header class="sticky top-0 z-40 bg-white border-b border-gray-200 safe-top">
  <nav class="max-w-screen-sm mx-auto flex justify-between items-center h-14 px-4">
    <!-- 左側: ロゴ & タブ -->
    <div class="flex items-center gap-4">
      <%= link_to "StreakMate", root_path, class: "font-semibold text-gray-900" %>
      <%= link_to "タイムライン", timeline_index_path,
            class: "text-gray-700 hover:text-black px-2 py-2 rounded-md" %>
    </div>

    <!-- 右側: ユーザー情報 or 認証リンク -->
    <div class="flex items-center gap-3 text-sm">
      <% if user_signed_in? %>
        <!-- 🔔 通知ベル -->
        <%= render "notifications/badge" %>

        <span class="text-gray-600">Hi,</span>
        <%= link_to current_user.nickname, mypage_path,
              class: "px-2 py-2 rounded-md hover:bg-gray-100" %>
        <%= link_to "Edit", edit_user_registration_path,
              class: "px-2 py-2 rounded-md hover:bg-gray-100" %>
        <%= button_to "Log out", destroy_user_session_path,
              method: :delete,
              form: { class: "inline" },
              class: "px-2 py-2 rounded-md hover:bg-gray-100" %>
      <% else %>
        <%= link_to "Sign up", new_user_registration_path,
              class: "px-3 py-2 rounded-md bg-black text-white text-sm font-medium" %>
        <%= link_to "Log in", new_user_session_path,
              class: "px-3 py-2 rounded-md border text-gray-800 hover:bg-gray-50" %>
      <% end %>
    </div>
  </nav>
</header>
