<% if user_signed_in? %>
  <% latest_goal = current_user.goals.order(updated_at: :desc).first %>

  <% if latest_goal.present? %>
    <%# 一度だけロードしてメモリで集計（DBアクセス最小化） %>
    <% tasks = latest_goal.goal_tasks.load %>
    <% total_count = tasks.size %>
    <% completed_count = tasks.count { |t| t.completed? } %>

    <%# progress_ratio がモデルにあっても無くてもOKなように保険をかける %>
    <% ratio_from_model = (latest_goal.respond_to?(:progress_ratio) && latest_goal.progress_ratio).to_i rescue 0 %>
    <% ratio_fallback   = total_count.positive? ? ((completed_count.to_f / total_count) * 100).round : 0 %>
    <% ratio = [[(ratio_from_model.nonzero? || ratio_fallback), 0].max, 100].min %>

    <div class="card mt-4">
      <div class="flex items-center justify-between">
        <h3 class="text-sm font-semibold"><%= latest_goal.title %></h3>
        <span class="text-xs text-gray-500"><%= ratio %>%</span>
      </div>

      <div class="mt-2 h-2 w-full overflow-hidden rounded-lg bg-gray-200" aria-label="進捗バー">
        <div class="h-2 bg-brand-500" style="width:<%= ratio %>%"></div>
        <span class="sr-only">進捗 <%= ratio %>%</span>
      </div>

      <div class="mt-2 text-xs text-gray-500">
        <%= completed_count %> / <%= total_count %> 完了
      </div>

      <div class="mt-3 text-right">
        <%= link_to "目標をみる", goals_path, class: "btn-ghost text-sm" %>
      </div>
    </div>
  <% else %>
    <div class="card mt-4">
      <h3 class="text-sm font-semibold">目標</h3>
      <p class="mt-1 text-xs text-gray-500">まだ目標がありません。まずは1つ作ってみましょう。</p>
      <div class="mt-3 text-right">
        <%= link_to "目標を作成", new_goal_path, class: "btn-primary text-sm" %>
      </div>
    </div>
  <% end %>

  <%# ▼ ここを“追記”：ホーム用ワンタップ提案ランチャー %>
  <div class="mt-4">
    <%= render "shared/suggestions_launcher",
               category: "relax",
               target_id: "suggestions_home" %>
  </div>
  <%# ▲ 追記ここまで %>

<% else %>
  <div class="max-w-sm mx-auto p-6">
    <h1 class="text-2xl font-bold">StreakMate</h1>
    <p class="text-gray-600 mt-2">Build streaks with friends</p>
    <div class="mt-4 space-x-3 text-sm">
      <%= link_to "新規登録", new_user_registration_path, class: "btn-primary" %>
      <%= link_to "ログイン", new_user_session_path, class: "btn-secondary" %>
    </div>
  </div>
<% end %>
