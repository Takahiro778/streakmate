<!-- app/views/home/show.html.erb の円グラフ近くに -->
<% if current_user && (goal = current_user.goals.order(updated_at: :desc).first) %>
  <div class="mt-4 rounded-lg border bg-white p-4">
    <div class="flex items-center justify-between">
      <h3 class="text-sm font-semibold"><%= goal.title %></h3>
      <span class="text-xs text-gray-500"><%= goal.progress_ratio %>%</span>
    </div>
    <div class="mt-2 h-2 w-full overflow-hidden rounded bg-gray-200">
      <div class="h-2 bg-black" style="width:<%= goal.progress_ratio %>%"></div>
    </div>
    <div class="mt-2 text-xs text-gray-500">
      <%= goal.goal_tasks.completed.count %> / <%= goal.goal_tasks.count %> 完了
    </div>
    <div class="mt-3 text-right">
      <%= link_to "目標をみる", goal_path(goal), class: "text-sm underline" %>
    </div>
  </div>
<% end %>
