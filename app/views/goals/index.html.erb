<div class="space-y-6">
  <h2 class="text-2xl font-bold">目標一覧</h2>

  <div>
    <%= link_to new_goal_path, class: "btn-primary w-full min-h-[44px] block text-center inline-flex items-center justify-center gap-1.5" do %>
      <%= icon "plus", variant: :solid, size: "w-5 h-5", "aria-hidden": "true" %>
      新規作成
    <% end %>
  </div>

  <% if @goals.blank? %>
    <p class="text-gray-600">表示できる目標はまだありません。</p>
  <% else %>
    <div class="space-y-4">
      <% @goals.each do |g| %>
        <div class="card">
          <div class="text-xs text-gray-600 mb-1">
            <%= g.user.nickname.presence || g.user.email %> • <%= l g.created_at, format: :short %> • <%= g.visibility %>
          </div>
          <h3 class="text-lg font-semibold"><%= link_to g.title, goal_path(g) %></h3>
          <p class="mt-1 line-clamp-3 text-sm"><%= truncate(g.description, length: 140) %></p>
          <p class="mt-2 text-sm text-gray-700">カテゴリ：<%= g.category.name %></p>

          <% if g.user_id == current_user.id %>
            <div class="mt-2 space-x-1 text-sm">
              <%= link_to edit_goal_path(g), class: "inline-flex items-center gap-1.5 px-2 py-1 rounded hover:bg-gray-50 text-blue-600" do %>
                <%= icon "pencil-square", size: "w-4 h-4", "aria-hidden": "true" %> <span>編集</span>
              <% end %>
              <%= link_to goal_path(g),
                          data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" },
                          class: "inline-flex items-center gap-1.5 px-2 py-1 rounded hover:bg-red-50 text-red-600" do %>
                <%= icon "trash", size: "w-4 h-4", "aria-hidden": "true" %> <span>削除</span>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
