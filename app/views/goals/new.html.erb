<div class="max-w-2xl mx-auto p-6">
  <h2 class="text-2xl font-bold mb-4">目標の作成</h2>

  <%= render 'shared/errors', obj: @goal %>

  <%= form_with model: @goal, local: true do |f| %>
    <div class="mb-4">
      <%= f.label :title, 'タイトル' %>
      <%= f.text_field :title, class: "w-full border rounded p-2", maxlength: 60 %>
    </div>

    <div class="mb-4">
      <%= f.label :description, '説明' %>
      <%= f.text_area :description, class: "w-full border rounded p-2", rows: 6, maxlength: 1000 %>
    </div>

    <div class="mb-4">
      <%= f.label :success_criteria, '達成基準' %>
      <%= f.text_area :success_criteria, class: "w-full border rounded p-2", rows: 4, maxlength: 500 %>
    </div>

    <div class="mb-4">
      <%= f.label :category_id, 'カテゴリ' %>
      <%= f.collection_select :category_id, Category.all, :id, :name, {}, class: "w-full border rounded p-2" %>
    </div>

    <div class="mb-4">
      <%= f.label :visibility, '公開範囲' %>
      <%= f.select :visibility, Goal.visibilities.keys.map { |k| [k, k] }, {}, class: "w-full border rounded p-2" %>
      <p class="text-sm text-gray-500 mt-1">
        public：全員 / followers：フォロワーのみ / private：自分のみ
      </p>
    </div>

    <div class="mb-6">
      <%= f.label :share_summary, 'シェア用短縮説明（任意・140文字）' %>
      <%= f.text_field :share_summary, class: "w-full border rounded p-2", maxlength: 140, placeholder: "Xに載せる短文（任意）" %>
    </div>

    <%= f.submit "作成する", class: "px-4 py-2 bg-blue-600 text-white rounded" %>
  <% end %>
</div>
