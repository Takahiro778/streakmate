<div class="space-y-6">
  <h2 class="text-2xl font-bold">目標の作成</h2>

  <%= render 'shared/errors', obj: @goal %>

  <%= form_with model: @goal, local: true do |f| %>
    <div>
      <%= f.label :title, 'タイトル' %>
      <%= f.text_field :title, class: "w-full border rounded-md p-2 text-sm", maxlength: 60 %>
    </div>

    <div>
      <%= f.label :description, '説明' %>
      <%= f.text_area :description, class: "w-full border rounded-md p-2 text-sm", rows: 6, maxlength: 1000 %>
    </div>

    <div>
      <%= f.label :success_criteria, '達成基準' %>
      <%= f.text_area :success_criteria, class: "w-full border rounded-md p-2 text-sm", rows: 4, maxlength: 500 %>
    </div>

    <div>
      <%= f.label :category_id, 'カテゴリ' %>
      <%= f.collection_select :category_id, Category.all, :id, :name, {}, class: "w-full border rounded-md p-2 text-sm" %>
    </div>

    <div>
      <%= f.label :visibility, '公開範囲' %>
      <%= f.select :visibility, Goal.visibilities.keys.map { |k| [k, k] }, {}, class: "w-full border rounded-md p-2 text-sm" %>
      <p class="text-xs text-gray-600 mt-1">
        public：全員 / followers：フォロワーのみ / private：自分のみ
      </p>
    </div>

    <div>
      <%= f.label :share_summary, 'シェア用短縮説明（任意・140文字）' %>
      <%= f.text_field :share_summary, class: "w-full border rounded-md p-2 text-sm", maxlength: 140, placeholder: "Xに載せる短文（任意）" %>
    </div>

    <%= f.submit "作成する",
          class: "w-full min-h-[44px] px-4 py-2 bg-blue-600 text-white rounded-md" %>
  <% end %>
</div>
