<div class="space-y-6 pb-28">
  <h2 class="text-2xl font-bold">目標の作成</h2>

  <%= render 'shared/errors', obj: @goal %>

  <%= form_with model: @goal, local: true, class: "space-y-4" do |f| %>
    <div>
      <%= f.label :title, 'タイトル' %>
      <%= f.text_field :title, class: "input", maxlength: 60 %>
    </div>

    <div>
      <%= f.label :description, '説明' %>
      <%= f.text_area :description, class: "textarea", rows: 6, maxlength: 1000 %>
    </div>

    <div>
      <%= f.label :success_criteria, '達成基準' %>
      <%= f.text_area :success_criteria, class: "textarea", rows: 4, maxlength: 500 %>
    </div>

    <div>
      <%= f.label :category_id, 'カテゴリ' %>
      <%= f.collection_select :category_id, Category.all, :id, :name, {}, class: "select" %>
    </div>

    <div>
      <%= f.label :visibility, '公開範囲' %>
      <%= f.select :visibility, Goal.visibilities.keys.map { |k| [k, k] }, {}, class: "select" %>
      <p class="text-xs text-gray-600 mt-1">
        public：全員 / followers：フォロワーのみ / private：自分のみ
      </p>
    </div>

    <div>
      <%= f.label :share_summary, 'シェア用短縮説明（任意・140文字）' %>
      <%= f.text_field :share_summary, class: "input", maxlength: 140, placeholder: "Xに載せる短文（任意）" %>
    </div>

    <!-- 送信バー -->
    <div class="sticky bottom-[72px] md:bottom-4 left-0 right-0 z-40 border-t bg-white/90 backdrop-blur supports-[backdrop-filter]:bg-white/60 py-3">
      <%= f.submit "作成する", class: "btn-primary w-full min-h-[44px]" %>
    </div>
  <% end %>
</div>
