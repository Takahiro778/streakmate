<%= turbo_stream.replace "suggestions" do %>
  <div id="suggestions" class="grid gap-3 sm:grid-cols-3">
    <% @suggestions.each do |s| %>
      <div class="p-3 border rounded-2xl bg-white shadow-sm">
        <div class="flex items-center gap-2">
          <span class="text-lg"><%= s.icon %></span>
          <h3 class="text-sm font-semibold"><%= s.title %></h3>
        </div>
        <p class="mt-1 text-sm text-gray-600"><%= s.body %></p>
        <p class="mt-2 text-[11px] text-gray-400">Tone: <%= s.tone %></p>
      </div>
    <% end %>
  </div>
<% end %>
