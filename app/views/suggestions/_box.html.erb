<div class="space-y-3">
  <% suggestions.each do |s| %>
    <%# s は Struct でも Hash でも動くように safe access %>
    <% title = (s.respond_to?(:title) ? s.title : s[:title]) %>
    <% body  = (s.respond_to?(:body)  ? s.body  : s[:body])  %>
    <% icon  = (s.respond_to?(:icon)  ? s.icon  : s[:icon])  %>
    <% tone  = (s.respond_to?(:tone)  ? s.tone  : s[:tone])  %>

    <div class="card card--tight flex gap-3 items-start">
      <div class="text-xl leading-none select-none"><%= icon %></div>
      <div class="flex-1">
        <p class="font-medium"><%= title %></p>
        <p class="text-sm text-gray-600 mt-0.5"><%= body %></p>
        <p class="text-[11px] text-gray-500 mt-1">Tone: <%= tone %></p>
      </div>
    </div>
  <% end %>
</div>
