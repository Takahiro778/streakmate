<div class="max-w-2xl mx-auto space-y-6">
  <h1 class="text-2xl font-bold">クイックログ</h1>

  <!-- ダッシュボード（連続日数 & 今週合計） -->
  <%= turbo_frame_tag "dashboard" do %>
    <div class="p-4 bg-gray-100 rounded-md flex justify-between items-center">
      <p class="font-bold">🔥 連続日数: <%= @streak_days %> 日</p>
      <p class="font-bold">📅 今週合計: <%= @weekly_minutes %> 分</p>
    </div>
  <% end %>

  <!-- フォーム -->
  <%= turbo_frame_tag "logs_form" do %>
    <%= render "form", log: @log %>
  <% end %>

  <!-- タイムライン -->
  <div id="timeline" class="space-y-3">
    <%= render @logs %>
  </div>
</div>
