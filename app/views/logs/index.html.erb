<div class="max-w-2xl mx-auto space-y-6">
  <h1 class="text-2xl font-bold">クイックログ</h1>

  <!-- ダッシュボード（パーシャル呼び出し） -->
  <%= turbo_frame_tag "dashboard" do %>
    <%= render "logs/dashboard", streak_days: @streak_days, weekly_minutes: @weekly_minutes %>
  <% end %>

  <!-- フォーム -->
  <%= turbo_frame_tag "logs_form" do %>
    <%= render "form", log: @log %>
  <% end %>

  <!-- タイムライン -->
  <div id="timeline" class="space-y-3">
    <%= render @logs %>
  </div>
</div>
