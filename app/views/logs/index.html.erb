<div class="space-y-4">
   <h1 class="text-2xl font-bold mb-1">クイックログ</h1>

  <%= turbo_frame_tag "dashboard" do %>
    <%= render "logs/dashboard", streak_days: @streak_days, weekly_minutes: @weekly_minutes %>
  <% end %>

  <%= turbo_frame_tag "logs_form", class: "block" do %>
    <%= render "form", log: @log %>
  <% end %>

  <div id="timeline" class="space-y-3">
    <%= render @logs %>
  </div>

  <!-- 端末差吸収の予備スペーサ（前は h-6 でしたが厚めに） -->
  <div class="h-12 md:hidden"></div>
</div>
