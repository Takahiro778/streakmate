<article id="log-<%= log.id %>" class="p-3 border rounded-lg bg-white shadow-sm">
  <div class="flex items-center justify-between">
    <div class="flex items-center gap-2">
      <span class="px-2 py-0.5 text-xs rounded-full border bg-gray-50">
        <%= log.category.titleize %>
      </span>
      <span class="font-semibold"><%= log.minutes %>分</span>
    </div>

    <div class="flex items-center gap-3">
      <span class="text-xs text-gray-500"><%= l(log.created_at, format: :short) %></span>
      <% if policy(log).show? %>
        <%= link_to "詳細", log_path(log),
              class: "text-sm text-gray-600 hover:underline focus:underline",
              data: { turbo_frame: "_top" } %>
      <% end %>
    </div>
  </div>

  <% if log.memo.present? %>
    <p class="mt-2 text-sm whitespace-pre-wrap text-gray-700"><%= log.memo %></p>
  <% end %>

  <!-- Cheer（応援）＋ X共有 ＋ コメント数 -->
  <div class="mt-3 flex items-center gap-4 text-sm text-gray-600">
    <%= render "cheers/button", log: log %>
    <%= x_share_link_to(log) %> <!-- 公開ログのみ表示 -->

    <!-- コメント数バッジ -->
    <span class="inline-flex items-center gap-1 text-gray-500">
      💬 <%= log.comments.size %>
    </span>
  </div>
</article>
