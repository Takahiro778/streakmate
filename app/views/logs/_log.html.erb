<article id="log-<%= log.id %>" class="p-3 border rounded-lg">
  <div class="flex items-center justify-between">
    <div class="flex items-center gap-2">
      <span class="px-2 py-0.5 text-xs rounded-full border">
        <%= log.category.titleize %>
      </span>
      <span class="font-semibold"><%= log.minutes %>分</span>
    </div>

    <div class="flex items-center gap-3">
      <span class="text-xs text-gray-500"><%= l(log.created_at, format: :short) %></span>
      <%# 認可OKのときだけ表示（/logs/:id） %>
      <% if policy(log).show? %>
        <%= link_to "詳細", log_path(log),
              class: "text-sm text-gray-600 hover:underline focus:underline",
              data: { turbo_frame: "_top" } %>
      <% end %>
    </div>
  </div>

  <% if log.memo.present? %>
    <p class="mt-2 text-sm whitespace-pre-wrap"><%= log.memo %></p>
  <% end %>

  <!-- Cheer（応援）＋ X共有 -->
  <div class="mt-3 flex items-center gap-3">
    <%= render "cheers/button", log: log %>
    <%= x_share_link_to(log) %>  <!-- 公開ログのみ表示されます -->
  </div>
</article>
