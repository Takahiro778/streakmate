<article id="log-<%= log.id %>" class="card">
  <div class="flex items-center justify-between">
    <div class="flex items-center gap-2">
      <%= link_to(log.user.nickname.presence || log.user.email, user_path(log.user),
                  class: "text-sm font-semibold hover:underline") %>
      <span class="badge"><%= log.category.titleize %></span>
      <span class="font-semibold"><%= log.minutes %>分</span>
    </div>

    <div class="flex items-center gap-3">
      <% if policy(log).show? %>
        <%= link_to l(log.created_at, format: :short), log_path(log),
              class: "text-xs text-gray-500 hover:underline focus:underline",
              data: { turbo_frame: "_top" },
              aria: { label: "ログ詳細へ" } %>
      <% else %>
        <span class="text-xs text-gray-500"><%= l(log.created_at, format: :short) %></span>
      <% end %>
    </div>
  </div>

  <div class="mt-1 text-xs text-gray-600">
    <% if log.visibility_private? %>🔒 非公開
    <% elsif log.visibility_followers? %>🧑‍🤝‍🧑 フォロワー限定
    <% else %>🟢 公開
    <% end %>
  </div>

  <% if log.memo.present? %>
    <p class="mt-2 text-sm whitespace-pre-wrap"><%= log.memo %></p>
  <% end %>

  <div class="mt-3 flex items-center gap-3">
    <%= render "cheers/button", log: log %>
    <%= x_share_link_to(log) %>
  </div>
</article>
