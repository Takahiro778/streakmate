<div class="p-3 border rounded-lg bg-white shadow-sm">
  <div class="flex items-center justify-between">
    <div class="flex items-center gap-2">
      <%# ユーザー名 / プロフアイコン（あれば差し替え可） %>
      <span class="text-sm font-semibold"><%= log.user.nickname %></span>
      <span class="px-2 py-0.5 text-xs rounded-full border bg-gray-50">
        <%= log.category.titleize %>
      </span>
      <span class="font-semibold"><%= log.minutes %>分</span>
    </div>
    <span class="text-xs text-gray-500">
      <%= l(log.created_at, format: :short) %>
    </span>
  </div>

  <% if log.memo.present? %>
    <p class="mt-2 text-sm whitespace-pre-wrap text-gray-700">
      <%= log.memo %>
    </p>
  <% end %>

  <!-- 公開範囲（見分けやすく） -->
  <div class="mt-2 text-xs text-gray-400">
    <% if log.visibility_public? %>
      🌍 公開
    <% elsif log.visibility_followers? %>
      👥 フォロー限定
    <% else %>
      🔒 非公開
    <% end %>
  </div>

  <!-- 応援ボタン -->
  <div class="mt-3">
    <%= render "cheers/button", log: log %>
  </div>

  <!-- コメント（一覧＋フォーム） -->
  <div class="mt-4">
    <%= render "comments/section", log: log %>
  </div>
</div>
